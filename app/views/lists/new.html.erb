
<div class = "form-new">

<h2>Create a New List</h2>

<%= form_with model: @list, local: true do |f| %>
  <div class="input-box" style="gap: 20px; display: flex; flex-direction: column; text-align: left;   border-radius: 50px;">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class = "buttons">
  <%= f.submit "Create List", class: "btn btn-primary"  %>
  </div>
<% end %>

<div class = "buttons">
<%= link_to "Back to Lists", lists_path, class: "btn btn-secondary" %>
</div>

</div>
